{
  "name": "smart-validate",
  "version": "1.0.1",
  "description": "Simple validate with form",
  "main": "lib/index.js",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text-lcov mocha",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "copy": "./node_modules/.bin/babel ./src --copy-files --out-dir ./lib",
    "format": "prettier --write '**/*.{js,css,md}'",
    "build": "rollup -c rollup.config.js",
    "lint": "eslint --ext .js src test",
    "prepublish": "mocha && npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,css,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lulei90/smart-validate"
  },
  "keywords": [
    "validate",
    "redux-form",
    "react",
    "validation",
    "validator"
  ],
  "author": "luyunjun",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lulei90/smart-validate/issues"
  },
  "homepage": "https://github.com/lulei90/smart-validate#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^0.12.0",
    "lint-staged": "^7.2.0",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "prettier": "^1.12.1",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-uglify": "^4.0.0"
  }
}
